<div class="container">
  <%= render 'shared/errors', obj: @article %>
  <div class="row justify-content-center">
    <%= form_with model: @article, class:"shadow  mb-5 bg-info rounded", local: true do |f| %>

      <div class=" row mt-4">
        <%= f.label :title, class:"form-label col-2 text-light" %>
        <div class= "col-10">
          <%= f.text_field :title, class:"form-control shadow rounded", placeholder: 'Title of article' %>
        </div>
      </div>

      <div class="row mt-4">
        <%= f.label :description, class:"form-label col-2 text-light"  %>
        <div class= "col-10">
          <%= f.text_area :description, rows: 10, class:"form-control shadow rounded", placeholder: 'Description of article' %>
        </div>
      </p>

      <div class="row justify-content-center">
        <%= f.submit class: 'btn btn-outline-light btn-lg col-2 mb-2' %>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center">
    <div class="col-4">
      <%= link_to '[Cancel and return to article listing page]', articles_path, class:'text-info text-decoration-none' %>
    </div>
  </div>
</div>
