<div class="container">
  <div class="row justify-content-center mt-4">
    <%= form_with scope: :session, url: login_path, class:"shadow  mb-5 bg-info rounded", local: true do |f| %>
      <div class="row mt-4">
        <%= f.label :email, class:"form-label col-2 text-light"  %>
        <div class= "col-10">
          <%= f.email_field :email, rows: 10, class:"form-control shadow rounded", placeholder: 'Enter your email address' %>
        </div>
      </div>

      <div class="row mt-4">
        <%= f.label :password, class:"form-label col-2 text-light"  %>
        <div class= "col-10">
          <%= f.password_field :password, rows: 10, class:"form-control shadow rounded", placeholder: 'Enter your password' %>
        </div>
      </div>

      <div class="row justify-content-center mt-4 mb-3">
        <%= f.submit "Log in", class: 'btn btn-outline-light btn-lg col-2 mb-2' %>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center">
    <div class="col-4 ">
      <%= link_to '[Cancel and return to article listing page]', articles_path, class:'text-info text-decoration-none' %>
    </div>
  </div>
</div>
